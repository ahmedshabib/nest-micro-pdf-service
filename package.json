{
  "name": "micro-pdf-service",
  "version": "0.1.3",
  "description": "PDF Microservice based on NestJS",
  "author": "Valentinos Galanos",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon --experimental-modules",
    "start:debug": "nodemon --experimental-modules --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node --experimental-modules dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.6",
    "@nestjs/core": "^8.4.6",
    "@nestjs/platform-express": "^8.4.6",
    "@nestjs/serve-static": "^2.2.2",
    "moment": "^2.29.3",
    "nodemon": "^2.0.16",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^14.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "shelljs": "^0.8.5",
    "ts-jest": "^28.0.4"
  },
  "devDependencies": {
    "@nestjs/testing": "^8.4.6",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.41",
    "@types/puppeteer": "^5.4.6",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.1",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
